
<div class="container-fluid search-container">
        {{#if firstMovie.poster_path }}
        <div class="row">
            <a class="btn ml-auto new-search mr-4 my-3" href="/search" >New Search</a>
        </div>
        {{/if}}
    <div class="row">
        {{#if firstMovie.poster_path }}
            <div class="col-md-6 text-center">
                <img class="img-fluid search-first-img " src="http://image.tmdb.org/t/p/w342/{{ firstMovie.poster_path }}" alt="{{firstMovie.original_title}}">
            </div>
            <div class="col-md-5">
                <h3 class="best-title"><span>Best Match: </span><i>{{firstMovie.original_title}}</i></h3>
                <p>{{firstMovie.overview}}</p>

                <table>
                    {{#each cast}}
                    <tr>
                        <td>
                            <img class="img-responsive cast-profile" src="http://image.tmdb.org/t/p/w45{{ profile_path }}" alt="">
                        </td>
                        <td>{{name}} as {{character}}</td>
                    </tr>
                    {{/each}}
                    </tr>
                </table>
            </div>
           
        {{else}} 
        <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4 search-forms my-5">
            <h2>Find a Movie</h2>
            <div class="btn-group-toggle d-flex justify-content-start" data-toggle="buttons">
                 <label class="btn mr-1 searchButton first-button active" id="genreButton">
                    <input type="checkbox" checked autocomplete="off" >Genre
                </label>
                <label class="btn searchButton first-button active" id="yearButton">
                    <input type="checkbox" checked autocomplete="off">Year Range
                </label>
                <label class="btn searchButton ml-auto second-button" id="titleButton">
                    <input type="checkbox"  checked autocomplete="off">Title
                </label>
            </div>

            <form method="POST" id="searchForm" action="/search/film">        
                <div class="form-group search-year my-4">
                    <h5>Release Year</h5>
                    <input type="text" class="form-control mb-2 mr-sm-2" id="minYear" name="minYear" placeholder="MIN">
                    <input type="text" class="form-control mb-2 mr-sm-2" id="maxYear" name="maxYear" placeholder="MAX">
                </div>
                 <div class="form-group search-genre my-4">
                    <h5>Pick Genre</h5>
                    <select class="form-control" id="genre" name="genre">
                        <option>Drama</option>
                        <option>Comedy</option>
                        <option>Romance</option>
                        <option>Adventure</option>
                        <option>Horror</option>
                    </select>
                </div>
                <div class="form-group search-title my-4 d-none">
                    <h5>Title</h5>
                    <label class="sr-only" for="inlineFormInputName2">Name</label>
                    <input type="text" class="form-control mb-2 mr-sm-2" name="movieTitle" id="movieTitle" placeholder="Rush Hour 2">
                </div>
                <button type="submit" id="submitButton" class="btn btn-block my-3 mx-auto">Submit</button>
            </form>
        </div>
        {{/if}}
  

    </div> <!--div.row -->

    {{#if movies}}
        <h3 class="text-center other-matches">Other Matches</h3>
    {{/if}}

    <div class="row row justify-content-center mb-5">
        {{#each movies}}
            {{#if poster_path }}
                {{#if @first}}
                {{else}}
                <div class="col-md-2 text-center">
                    <img class="img-responsive search-img" src="http://image.tmdb.org/t/p/w185/{{ poster_path }}" alt="{{original_title}}">
                </div> 
                {{/if}}
            {{/if}}
        {{/each}}
    </div>

</div>


