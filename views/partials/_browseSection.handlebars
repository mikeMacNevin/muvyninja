            <div class="col-4 col-xl-2"> 
                <a href="" data-toggle="modal" data-target="#exampleModal{{title}}">
                    <img class="card-img-top my-1"  src="http://image.tmdb.org/t/p/w185/{{ poster_path }}" alt="movie poster">
                </a>
            </div>
            <div class="modal" id="exampleModal{{original_title}}" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="container">
                    <div class="modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title font-italic">{{title}} ({{yearOnly release_date }}) </h2>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-7 text-white">
                                        <p class="px-3 mb-3"> {{overview}}</p>
 

                                    </div>
                                    <div class="col-md-5 text-white text-center">
                                        <img class="w-100" src="http://image.tmdb.org/t/p/w185/{{ backdrop_path }}" alt="">
                                    <form action="/search/film" method="POST">
                                        <input type="hidden" id="movie_id" name="movie_id" value={{id}} />
                                        <input type="hidden" id="movieTitle" name="movieTitle" value="{{title}}" />
                                        
                                        <button type="button" class="btn btn-danger mt-2" data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn  modal-add btn-navy mt-2">View Details</button>
                                    </form>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">

                            </div> 
                        </div>
                    </div>
                </div>
            </div>